#!/bin/env sh

export FZF_DEFAULT_COMMAND='fd --type d --strip-cwd-prefix --hidden --follow'
export FZF_CTRL_T_COMMAND='fd --type d --strip-cwd-prefix --hidden --follow'


# --walker-skip .git,node_modules,target,shared,*old-install*,*steam*,*Steam*,*Proton*,.local/state*,.local/share/Steam
export FZF_CTRL_T_OPTS="
  --preview 'bat -n --color=always {}'
  --bind 'ctrl-/:change-preview-window(down|hidden|)'"

export FZF_CTRL_R_OPTS="
  --height 40% 
  --layout=reverse 
  --border
  --preview 'echo {} | bat --style=numbers --color=always' 
  --bind 'ctrl-/:change-preview-window(down|hidden|)'
  --ansi
"
export FZF_ALT_C_OPTS="
  --walker-skip .git,node_modules,target,shared,*old-install*,*steam*,*Steam*,*Proton*,.local/state*,.local/share/Steam/**
  --preview 'find {} -maxdepth 1 -type f -o -type d | head -20'
  --bind 'ctrl-/:change-preview-window(down|hidden|)'"

